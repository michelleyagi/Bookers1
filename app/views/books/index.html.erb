<h1>Books</h1>

<% @books.each do |book| %>
  <table class="title">
    <thead>
      <th>Title</th>
      <span><%= book.title %></span>
      <th>Body</th>
       <span><%= book.body %></span>
      <th colspan="3"></th>
    </thead>
  </table>
<% end %>
<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
<% end %>